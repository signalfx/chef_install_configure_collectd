<LoadPlugin "python">
    Globals true
</LoadPlugin>

<Plugin "python">
    ModulePath "<%= @python_folder %>"

    Import "elasticsearch_collectd"

    <Module "elasticsearch_collectd">
        Verbose false
        Cluster "<%= @clustername %>"
        Indexes ["<%= @indexes %>"]
        EnableIndexStats true
        EnableClusterHealth true
    </Module>
</Plugin>
